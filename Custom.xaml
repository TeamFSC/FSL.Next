<Page x:Class="FSL.Next.Custom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FSL.Next"
        mc:Ignorable="d"
        Title="Custom" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="欢迎使用FSL.Next" FontWeight="Bold" FontSize="25" HorizontalAlignment="Center"/>
            <Label Content="新一代FSL启动器" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center"/>

            <Label Content="这是FSL的自定义主页文件，依旧基于WPF。&#xA;与PCL II 不同的是，这个主页支持C#代码！" Margin="10" FontSize="15"/>
            <Button Click="Button_Click">
                <ui:IconAndText x:Name="help" Icon="{x:Static ui:SegoeFluentIcons.StatusCircleQuestionMark}" Content="了解如何自定义主页"/>
            </Button>
         </StackPanel>
    </Grid>
</Page>
